!!!5
%head
  %meta{name: 'viewport', content: 'initial-scale=1.0, user-scalable=no'}
  %title Audio Map

  %link{ type: 'text/css', rel: 'stylesheet', href: 'style/audio-map.css' }

  %script{ type: 'text/javascript', src: 'script/jquery-1.7.1.min.js' }
  %script{ type: 'text/javascript', src: 'http://maps.google.com/maps/api/js?libraries=geometry&sensor=true' }
  %script{ type: 'text/javascript', src: 'script/geo_map.js' }
  %script{ type: 'text/javascript', src: 'script/geo_tracker.js' }
  %script{ type: 'text/javascript', src: 'script/audio_drop.js' }
  %script{ type: 'text/javascript', src: 'script/audio-map.js' }

%body{onload: "initialize_map()"}
  #map_canvas{:style => "width: 100%; height: 100%"}
  #overlay
    %p
      Click somewhere on the map to drop the soundbyte on that location
    %label{:for => 'radius'} Radius (in meters)
    %input#radius{:name => 'radius', :type => 'number', :value => 5}
  %audio#example_sound{:preload => 'auto', :src => 'audio/gimme_danger.mp3'}
    

